<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="IGCInformer.Notification" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Информ-Групп Информер"
	x:Name="notWindow"
	WindowStyle="None"
	Background="#FF7E8BD0"
	ShowInTaskbar="False"
	AllowsTransparency="True"
	Opacity="10"
	Topmost="True"
	Width="300"
	Height="180">
	<Grid>
		<TextBlock
			x:Name="tb_header"
			Foreground="#FFFFFFFF"
			FontSize="14"
			TextAlignment="Center"
			TextWrapping="WrapWithOverflow"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Margin="8,25,8,0"
			Height="60"
			FontWeight="Bold"
			TextTrimming="WordEllipsis" />
		<TextBlock
			x:Name="tb_message"
			TextAlignment="Center"
			TextWrapping="WrapWithOverflow"
			Foreground="#FFFFFFFF"
			FontSize="12"
			HorizontalAlignment="Stretch"
			Height="80"
			VerticalAlignment="Bottom"
			Margin="8,0,8,8"
			Padding="3,3,3,3"
			TextTrimming="WordEllipsis" />
		<Image
			x:Name="img_close"
			Width="20"
			Height="20"
			VerticalAlignment="Top"
			HorizontalAlignment="right"
			Margin="8,8,8,8"
			Source="bin\Debug\close.png"
			Stretch="Fill" />
	</Grid>
</Window>