<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="IGCInformer.NewFeed" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Новый канал"
	Height="200"
	Width="400"
	MinHeight="200"
	MinWidth="400"
	MaxHeight="200"
	MaxWidth="400"
	Background="#FF7E8BD0"
	Icon="bin\Debug\Icon.ico">
	<Grid>
		<StackPanel
			Orientation="Vertical"
			Background="#FF7E8BD0">
			<StackPanel
				Orientation="Horizontal"
				VerticalAlignment="Center"
				Margin="40,30,40,10">
				<Label
					Foreground="White"
					FontSize="14"
					Margin="0,0,20,0"
					Content="Введите адрес:"></Label>
				<TextBox
					Width="200"
					x:Name="tb_url"></TextBox>
			</StackPanel>
			<TextBlock
				x:Name="tb_validation"
				Margin="20,0"
				TextAlignment="Center"
				Foreground="#FFFFFFFF"
				FontSize="14"
				Padding="0,5,0,5"></TextBlock>
			<Button
				x:Name="btn_addFeed"
				Margin="60, 30, 60, 30"
				Content="Добавить канал" />
		</StackPanel>
	</Grid>
</Window>